{
  "name": "YouTube Alert",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Helps alert user when subscriptions upload new videos.",
  "homepage_url": "https://github.com/sumukhshiv/youtube-chrome-extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/bg/background.js"],
    "persistent": false
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "YouTube Alert",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "activeTab"
  ]
}
